    "version": "0.2.0",
    "configurations": [
        {
            "name": "Train",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/script_train.py",
            "cwd": "${workspaceFolder}",
            "args": [
                "--device", "cpu",
                "--fake-path", "./dataset/Fake.csv",
                "--true-path", "./dataset/True.csv",
                "--cache-folder", "./cache/",
                "--batch-size", "10",
                "--epoches", "10",
                //"--is-half" // Only with on CUDA comp[utations
